---
layout: null
---
[
{% assign recipes = site.recipes %}
{% for post in recipes %}
  {
    "title": "{{ post.title | escape }}",
    "url": "{{ post.url | relative_url }}",
    "featured_image": "{{ post.featured_image | relative_url }}",
    "catalogue": {% if post.collections.catalogue %}{{ post.collections.catalogue | jsonify }}{% else %}[]{% endif %},
    "book": {
      "title": "{{ post.book.title | escape }}",
      "link": "{{ post.book.link }}"
    },
    "content": "{{ post.content | strip_html | strip_newlines | escape }}"
  }{% if forloop.last == false %},{% endif %}
{% endfor %}
]
