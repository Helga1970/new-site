---
layout: null
permalink: /assets/data/recipes.json
---

[
{% for r in site.recipes %}
  {
    "title": {{ r.title | jsonify }},
    "url": {{ r.url | relative_url | jsonify }},
    "featured_image": {{ r.featured_image | default: "" | relative_url | jsonify }},
    "book": {
      "title": {{ r.book.title | default: "" | jsonify }},
      "title_slug": {{ r.book.title_slug | default: r.book.title | slugify | jsonify }},
      "author": {{ r.book.author | default: "" | jsonify }},
      "cover": {{ r.book.cover | default: "" | relative_url | jsonify }},
      "link": {{ r.book.link | default: "" | jsonify }}
    },
    "excerpt": {{ (r.excerpt | default: r.content) | strip_html | strip_newlines | truncate: 160 | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
