---
layout: null
permalink: /api/recipes/les-cookeis-de-nos-reve.json
---
{% assign current_book = site.books | where: "title_slug", "les-cookeis-de-nos-reve" | first %}
[
  {% assign book_recipes = site.recipes | where: "book.title_slug", "les-cookeis-de-nos-reve" %}
  {% for recipe in book_recipes %}
    {
      "title": {{ recipe.title | jsonify }},
      "url": {{ recipe.url | relative_url | jsonify }},
      "featured_image": {{ recipe.featured_image | relative_url | default: "" | jsonify }},
      "book_cover": {{ recipe.book.cover | relative_url | default: "" | jsonify }},
      "book_title": {{ current_book.title | jsonify }},
      "categories": {{ recipe.categories | jsonify }},
      "excerpt": {{ (recipe.excerpt | default: recipe.content) | strip_html | strip_newlines | truncate: 160 | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
