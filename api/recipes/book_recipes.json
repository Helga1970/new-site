---
layout: null
permalink: /api/recipes/{{ page.book_slug | slugify }}.json
---
[
  {% assign book_recipes = site.recipes | where_exp: "item", "item.book.title_slug == page.book_slug" %}
  {% for recipe in book_recipes %}
    {
      "title": {{ recipe.title | jsonify }},
      "url": {{ recipe.url | relative_url | jsonify }},
      "featured_image": {{ recipe.featured_image | default: "" | jsonify }},
      "book_cover": {{ recipe.book.cover | default: "" | jsonify }},
      "excerpt": {{ (recipe.excerpt | default: recipe.content) | strip_html | strip_newlines | truncate: 160 | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
