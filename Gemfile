source 'https://rubygems.org'

# Позволяем использовать любую версию 4.x, которая уже есть на сервере
gem 'jekyll', '~> 4.3'

gem 'bundler'
gem 'kramdown', '>= 2.3.0'

group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-paginate'
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
  gem 'jekyll-archives'
end
